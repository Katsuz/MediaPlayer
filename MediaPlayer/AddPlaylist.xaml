<Window x:Class="MediaPlayerProject.AddPlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:MediaPlayerProject"
        mc:Ignorable="d"
        Title="AddPlaylist" Height="250" Width="450" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" AllowsTransparency="True"  WindowStyle="None" Background="Transparent">
    <Border Background="White" CornerRadius="20" MouseDown="Border_MouseDown">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Add Playlist" Style="{StaticResource TitleDisplay}"/>
            
            <Button x:Name="Exit_Button" Click="Exit_Button_Click" Style="{StaticResource ExitButton}" >
                <Icon:PackIconMaterial Kind="Close"/>
            </Button>

            <TextBlock Text="Name" />
            <TextBox x:Name="NamePlaylist"/>

            <Button Style="{StaticResource menuButton}" x:Name="saveBtn" Click="saveBtn_Click">
                <Button.Content>
                    <TextBlock Text="Save"/>
                </Button.Content>
            </Button>

        </StackPanel>
    </Border>
</Window>
