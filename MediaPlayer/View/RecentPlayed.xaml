<UserControl x:Class="MediaPlayerProject.View.RecentPlayed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayerProject.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="830" >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <StackPanel Width="200" Margin="50 0 0 0 ">
                
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="500">
                <TextBlock Text="Name" HorizontalAlignment="Center" Margin="0 30" />
                <Button Width="100" Height="60" >
                    <TextBlock Text="Play"/>
                </Button>
            </StackPanel>
        </StackPanel>
        <ListView Grid.Row="1">
            
        </ListView>
    </Grid>
</UserControl>
