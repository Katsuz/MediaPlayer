<UserControl x:Class="MediaPlayerProject.View.RecentPlayed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayerProject.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="830" >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Width="200" Margin="50 0 0 0 ">
                
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="500">
                <TextBlock Text="Name" Margin="20 50" />
                <Button Width="100" Height="60" >
                    <TextBlock Text="Play"/>
                </Button>
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="2">
            
            <ListView>
            
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
